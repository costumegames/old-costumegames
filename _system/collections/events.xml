<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>
        <fieldset name="options">
            <field name="parent" type="itemlist" label="Parent Event" filter="string" class="form-control" app="events" limit="true" />
            <field name="area" type="itemlist" label="Venue" filter="string" class="form-control" app="venues" admintable="true" />
            <field name="sponsor" type="itemlist" label="Sponsor" filter="string" class="form-control" app="sponsors" admintable="true" />
            <field name="image" type="media" label="Image" filter="string" class="form-control" />
        </fieldset>
        <fieldset name="extra" title="Event Details">
            <field name="start_date" type="datetime" label="Start Date" filter="date" class="form-control" admintable="true" />
            <field name="end_date" type="datetime" label="End Date" filter="date" class="form-control" />
            <field name="all_day" type="checkbox" label="All Day Event" filter="string" />
            <field name="ticket" type="url" label="Ticket Link" filter="url" class="form-control" />
            <field name="price" type="text" label="Price" filter="int" class="form-control" admintable="true" />
        </fieldset>
    </fields>
</form>